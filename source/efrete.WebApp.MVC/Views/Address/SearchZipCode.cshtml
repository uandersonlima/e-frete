@{
    ViewData["Title"] = "Buscar cep";
}

<div class="container min-height-custom">
    <div class="row h-inherit">
        <div class="col-12 align-self-center">
            <span class="fs-4 fw-light">
                <a class="link-purple" asp-area="" asp-controller="Home" asp-action="Index">
                    Início >
                </a>
                Buscar cep
            </span>
        </div>
        <div class="col-12 my-5">
            <div class="col-10 col-sm-8 col-md-8 col-lg-5 col-xl-4">
                <form method="post">
                    <h4>Digite o CEP para encontrar o endereço desejado.</h4>
                    <label for="state" class="form-label mt-3">Estado</label>
                    <input id="state" class="form-control form-control-lg" type="text" placeholder="Bahia"
                        autocomplete="off" />
                    <label for="city" class="form-label mt-2">Munício</label>
                    <input id="city" class="form-control form-control-lg" type="text" placeholder="Catu"
                        autocomplete="off" />
                    <label for="street" class="form-label mt-2">Logradouro</label>
                    <input id="street" class="form-control form-control-lg" type="text" placeholder="Av. Santa Luzia"
                        autocomplete="off" />
                    <div class="mt-3">
                        <div class="row">
                            <div class="col-6 d-grid gap-2 pe-1">
                                <a class="btn btn-lg btn-light text-muted fw-light fs-5" asp-area=""
                                    asp-controller="Home" asp-action="Index">
                                    Voltar
                                </a>
                            </div>
                            <div class="col-6 d-grid gap-2 ps-1">
                                <input class="btn btn-lg btn-purple fw-light fs-5" value="Buscar" type="submit" />
                            </div>
                        </div>

                    </div>
                </form>
            </div>
        </div>
                <div class="col-12"></div>        <div class="col-12"></div>        <div class="col-12"></div>
    </div>
</div>
